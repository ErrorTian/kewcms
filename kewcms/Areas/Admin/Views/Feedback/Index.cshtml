@model IEnumerable<kewcms.Areas.Admin.Models.Feedback>

@{
    ViewData["Title"] = "Index";
}

<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading no-border">
                    留言管理
                    <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                    </span>
                </header>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Title)</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Tel)</th>
                                <th>@Html.DisplayNameFor(model => model.QQ)</th>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <th>@Html.DisplayNameFor(model => model.AddTime)</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Tel)</td>
                                    <td>@Html.DisplayFor(modelItem => item.QQ)</td>
                                    <td>@Html.DisplayFor(modelItem => item.AddTime)</td>
                                    <td>
                                        <form asp-action="Delete">
                                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">编辑</a> &nbsp;&nbsp;
                                            <input class="btn btn-danger" type="submit" value="删除" />
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="dataTables_paginate paging_bootstrap pagination">
                        <ul>
                            <li class="prev disabled"><a href="#">← 上一页</a></li>
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li class="next"><a href="#">下一页 → </a></li>
                        </ul>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
