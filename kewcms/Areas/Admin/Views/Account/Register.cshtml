@model RegisterViewModel
@{
    ViewData["Title"] = "添加管理员";
    Layout = null;
}

<div class="wrapper">
    <div class="row">
        <div class="col-md-12">
            <section class="panel">
                <div class="panel-heading">
                    <div class="panel-title">
                        添加管理员
                    </div>
                </div>
                <div class="panel-body">
                        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal adminex-form">
                            <div class="form-group">
                                <label class="control-label col-md-3">邮箱</label>
                                <div class="col-md-6">
                                    <input type="text" asp-for="Email" class="form-control" placeholder="">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">密码</label>
                                <div class="col-md-6">
                                    <input type="password" asp-for="Password" class="form-control" placeholder="">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">确认密码</label>
                                <div class="col-md-6">
                                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-6 col-md-offset-3">
                                    <button type="submit" class="btn btn-primary">新增</button>
                                </div>
                            </div>
                        </form>
                    </div>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
